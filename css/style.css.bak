/*slideshow	_______*/

.slider{
	padding-top: 50px;
}
.slider .list .item{
	inset: 0 0 0 0;
	align-content: center;
	text-align: center;
	perspective: 100px;
	margin: auto;
	width: fit-content;
/*	padding-top: 50px;*/
}
.slider .list .item img{
	margin: 50px;
	text-replace: 1s;
	border-radius: 10px;
	box-shadow: 2px 2px 2px;
}

.left{
	animation: left 1s 1 forwards;
	float: left;
	transition: 1s;
/*	transform: rotatey(-5deg);*/
/*	transform-style: preserve-3d;*/
}

.right{
	animation: animasi 1s 1 forwards;
	transition: 1s;

}
.hide{
	transition: 1s;
	display: none;
}
.mid{
/*	transition: 2s;*/
	animation: mid 1s 1 forwards;
	
}
@keyframes animasi{
	0%{
		display: none;
	}
	50%{
		float: right;
		transform: rotatey(2.5deg);
		transform-style: preserve-3d;
	}
	100%{
		float: right;
		transform: rotatey(5deg);
		transform-style: preserve-3d;
	}
}
@keyframes left{
	0%{
		display: none;
	}
	50%{
		float: left;
		transform: rotatey(-2.5deg);
		transform-style: preserve-3d;
	}
	100%{
		float: left;
		transform: rotatey(-5deg);
		transform-style: preserve-3d;
	}
}
@keyframes mid{
	0%{
		float: right;
	}
	50%{
		float: none;
		transform: scale(100%);
	}
	100%{
		float: none;
		transform: scale(170%);
	}
}

/*slideshow end_________*/