/*// Small devices (landscape phones, 576px and up)*/
@media (min-width: 576px) { 
	.navbar{
	display: flex;
	position: fixed;
	width: 100vh;
	align-items: center;
	justify-content: space-between;
	height: 70px;
	z-index: 5;
}
.navbrand{
	margin: 50px;
	font-size: 2em;
	font-style: italic;
	font-family: "Yellowtail", cursive;
}
